#!/usr/bin/env bash
set -e

SRC_BRANCH="main"
DEPLOY_BRANCH="gh-pages"
NO_PUSH=""

while [[ $# -gt 0 ]]; do
    key="$1"
    case $key in
        -h|--help)
            echo "usage: deploy [-s|--src SRC_BRANCH] [-d|--deploy DEPLOY_BRANCH] [--no-push] [--verbose]"
            exit 0
            ;;
        -s|--src)
            SRC_BRANCH="$2"
            shift
            ;;
        -d|--deploy)
            DEPLOY_BRANCH="$2"
            shift
            ;;
        --no-push)
            NO_PUSH="true"
            ;;
        --verbose)
            set -x
            ;;
    esac
    shift
done

echo "Deploying from $SRC_BRANCH to $DEPLOY_BRANCH"

# Ensure working dir is clean
if ! git diff-index --quiet HEAD --; then
    echo "Please commit or stash changes before deploying."
    exit 1
fi

# Build site
bundle exec jekyll build

# Create a temporary deploy dir
TEMP_DIR=$(mktemp -d)
cp -R _site/* "$TEMP_DIR"

# Switch to deploy branch
git fetch origin $DEPLOY_BRANCH || true
git checkout --orphan $DEPLOY_BRANCH

# Remove all files (except .git)
git rm -rf . > /dev/null 2>&1 || true
cp -R "$TEMP_DIR"/* .
rm -rf "$TEMP_DIR"

# Commit and push
git add -A
git commit --allow-empty -m "Deploy $(date '+%Y-%m-%d %H:%M:%S') [ci skip]"

if [ -z "$NO_PUSH" ]; then
  git push -f origin $DEPLOY_BRANCH
fi

# Switch back
git checkout "$SRC_BRANCH"
echo "Deployed successfully."
